@article{zhuoBreathableWovenHybrid2023,
  title = {A Breathable and Woven Hybrid Energy Harvester with Optimized Power Management for Sustainably Powering Electronics},
  author = {Zhuo, Jingting and Zheng, Zhihao and Ma, Rui and Zhang, Xujing and Wang, Yiqun and Yang, Peiyuan and Cao, Lingyun and Chen, Jiaxiang and Lu, Jintao and Chen, Gengjia and Chen, Guoqi and Fu, Jun and Wu, Ziping and Wang, Jie and Wang, Xiaofeng and Yang, Guowei and Yi, Fang},
